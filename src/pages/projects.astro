---
import Head from '../components/Head.astro';
import Navigation from "../components/Navigation.astro";
import RepositoryCard from "../components/RepositoryCard.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const cards = {
    "projects": [
        {
            path: "berkay-yalin/promethium",
            description: "Library for calculating statistical distributions, written in pure Python with zero dependencies.",
            language: ["Python"]
        },
        {
            path: "berkay-yalin/zygon",
            description: "Transpile OCR GCSE & A-Level Pseudocode into Python.",
            language: ['Svelte', 'TypeScript', 'JavaScript', 'HTML', 'Sass', 'CSS']
        },
        {
            path: "berkay-yalin/open-with-nvim",
            description: "A simple wrapper to set Neovim as the default application on Windows for text files with support for opening files in tabs instead of in separate windows.",
            language: ["C#"]
        }
    ],
    "other_repositories": [
        {
            path: "berkay-yalin/dotfiles",
            description: "trying to figure out how VimScript works",
            language: ["Lua", "Shell", "AutoHotkey", "Vim Script", "PowerShell"]
        },
        {
            path: "berkay-yalin/yalin.io",
            description: "website & stuff",
            language: ['Svelte', 'TypeScript', 'JavaScript', 'HTML', 'Sass', 'CSS']
        }
    ]
};
---

<!doctype html>
<html lang="en">
	<head>
		<Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body>
        <Navigation/>

        <main>
            <h1>projects</h1>

            {
                cards.projects.map((e) => (
                    <RepositoryCard path={e.path} description={e.description} language={e.language}/>
                ))
            }

            <h1>other repositories</h1>

            {
                cards.other_repositories.map((e) => (
                    <RepositoryCard path={e.path} description={e.description} language={e.language}/>
                ))
            }
        </main>

	</body>
</html>

<style lang="scss">
    @use "../styles/global";
    @use "../styles/landing";
</style>
