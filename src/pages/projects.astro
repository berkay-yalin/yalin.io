---
import MetaHead from '../components/Head.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Navigation from "../components/Navigation.astro";
import "../styles/global.css";

import RepositoryCard from "../components/RepositoryCard.svelte";
---

<!doctype html>
<html lang="en">
	<head>
		<MetaHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body>
        <Navigation/>

        <main>
            <h1>Projects</h1>

            <RepositoryCard
                path={"berkay-yalin/promethium"}
                description={"Library for calculating statistical distributions, written in pure Python with zero dependencies."}
                language={["Python"]}}
            />

            <RepositoryCard
                path={"berkay-yalin/zygon"}
                description={"Transpile OCR GCSE & A-Level Pseudocode into Python."}
                language={['Svelte', 'TypeScript', 'JavaScript', 'HTML', 'Sass', 'CSS']}}
            />

            <RepositoryCard
                path={"berkay-yalin/open-with-nvim"}
                description={"A simple wrapper to set Neovim as the default application on Windows for text files with support for opening files in tabs instead of in separate windows."}
                language={["C#"]}}
            />

            <h1>Other Repositories</h1>

            <RepositoryCard
                path={"berkay-yalin/dotfiles"}
                description={"trying to figure out how VimScript works"}
                language={["Lua", "Shell", "AutoHotkey", "Vim Script", "PowerShell"]}}
            />

            <RepositoryCard
                path={"berkay-yalin/yalin.io"}
                description={"website & stuff"}
                language={['Svelte', 'TypeScript', 'JavaScript', 'HTML', 'Sass', 'CSS']}}
            />
        </main>

	</body>
</html>

<style lang="scss">
    html, body {
        background-color: #111111;
    }

    main {
        width: 720px;
        margin: auto;

        padding: 2rem;
        box-sizing: border-box;

        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

	$text-color: rgb(139, 148, 158);
    $link-color: rgb(88, 166, 255);

    h1 {
        text-align: center;
        font-size: 1rem;
        color: $text-color;
        margin: 0;
    }

    a {
        color: $link-color;
    }

</style>
