---
import type { CollectionEntry } from 'astro:content';
import Head from '../components/Head.astro';
import Navigation from "../components/Navigation.astro";

type Props = CollectionEntry<'articles'>['data'];
const { title, description, publicationDate, updatedDate, heroImage } = Astro.props;

import "../styles/global.css";

import FormattedDate from "../components/Articles/FormattedDate.astro";
---

<html lang="en">
	<head>
		<Head title={title} description={description} />
	</head>

	<body>
        <Navigation/>

		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>

                <div class="hero-wrapper">
                    <FormattedDate client:load date={publicationDate}/>
                    <!-- <div class="date">{publicationDate}</div> -->
                    <div class="title">{title}</div>
                </div>

                <slot/>
            </article>
		</main>
	</body>
</html>

<style lang="scss" is:global>
    .katex-html {
        display: none !important;
    }

    .katex {
        overflow-y: auto;
        overflow-x: hidden;

        white-space : pre-wrap !important;
    }
</style>

<style lang="scss">
    $link-color: rgb(88, 166, 255);
    $white-smoke: #f5f5f5;

    html, body {
        background-color: #111111;
    }

    a {
        color: $link-color;
    }

    h1 {
        color: white;
    }

    p {
        color: white;
    }

    * {
        color: white;
    }
</style>

<style>
    main {
        width: 100%;
        margin: 0;
    }
    .hero-image {
        width: 100%;
    }
    .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
    }

    article {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
    }

    .hero-wrapper {
        margin: auto;
        text-align: center;
    }

    .title {
        font-size: large;
    }





